{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES6",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "outDir": "./build/",
    "removeComments": true,
    // "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "importHelpers": true
  }
}
